<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GuideActivity">

    <LinearLayout
        android:id="@+id/guide_ll1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:orientation="horizontal"
        android:padding="15dp">

        <TextView
            android:id="@+id/guide_one"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="可回收物"
            android:textColor="@color/black"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/guide_two"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="厨余垃圾"
            android:textColor="@color/black"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/guide_three"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="有害垃圾"
            android:textColor="@color/black"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/guide_four"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="其他垃圾"
            android:textColor="@color/black"
            android:textSize="15dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/guide_ll2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/guide_ll3"
        android:layout_below="@+id/guide_ll1"
        android:orientation="horizontal">

    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_above="@id/guide_ll3"
        android:background="#CCCCCC" />

    <LinearLayout
        android:id="@+id/guide_ll3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/guide_tv1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:layout_weight="1"
            android:drawableTop="@drawable/shouye"
            android:drawablePadding="2dp"
            android:gravity="center"
            android:text="首页"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/guide_light"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/zhinann"
            android:gravity="center"
            android:text="指南"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/guide_tv2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/tice"
            android:gravity="center"
            android:text="题测"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/guide_tv3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/wode"
            android:gravity="center"
            android:text="我的"
            android:textSize="12dp" />
    </LinearLayout>

</RelativeLayout>