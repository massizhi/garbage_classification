<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PersonalActivity">

    <TextView
        android:id="@+id/personal_info"
        android:layout_width="205dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="15dp"
        android:text="个人信息"
        android:textColor="@color/black"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/personal_addition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="15dp"
        android:layout_toRightOf="@+id/personal_info"
        android:text="用户名、备注"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/personal_array1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="27dp"
        android:layout_marginBottom="15dp"
        android:layout_toRightOf="@+id/personal_addition"
        android:text="＞"
        android:textColor="#CCCCCC"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/personal_security"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/personal_info"
        android:layout_margin="15dp"
        android:text="安全设置"
        android:textColor="@color/black"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/personal_array2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/personal_addition"
        android:layout_margin="12dp"
        android:layout_toRightOf="@+id/personal_security"
        android:text="＞"
        android:textColor="#CCCCCC"
        android:textSize="20dp" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/personal_security"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="#CCCCCC" />

    <TextView
        android:id="@+id/personal_able"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/personal_security"
        android:layout_margin="15dp"
        android:text="权限"
        android:textColor="@color/black"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/personal_array3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/personal_array2"
        android:layout_margin="12dp"
        android:layout_toRightOf="@+id/personal_able"
        android:text="＞"
        android:textColor="#CCCCCC"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/personal_response"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/personal_able"
        android:layout_margin="15dp"
        android:text="反馈建议"
        android:textColor="@color/black"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/personal_array4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/personal_array3"
        android:layout_margin="12dp"
        android:layout_toRightOf="@+id/personal_response"
        android:text="＞"
        android:textColor="#CCCCCC"
        android:textSize="20dp" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/personal_response"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="#CCCCCC" />

    <TextView
        android:id="@+id/personal_about"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/personal_response"
        android:layout_margin="15dp"
        android:text="关于"
        android:textColor="@color/black"
        android:textSize="15dp" />
    <TextView
        android:id="@+id/personal_array5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="2dp"
        android:layout_below="@+id/personal_array4"
        android:layout_toRightOf="@+id/personal_about"
        android:text="＞"
        android:textColor="#CCCCCC"
        android:textSize="20dp" />

    <Button
        android:id="@+id/personal_back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/personal_about"
        android:layout_margin="40dp"
        android:background="@drawable/button"
        android:text="注销账号"
        android:textColor="@color/white"
        android:textSize="20dp" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_above="@id/personal_ll"
        android:background="#CCCCCC" />

    <LinearLayout
        android:id="@+id/personal_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/personal_tv1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:layout_weight="1"
            android:drawableTop="@drawable/shouye"
            android:drawablePadding="2dp"
            android:gravity="center"
            android:text="首页"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/personal_tv2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/zhinann"
            android:gravity="center"
            android:text="指南"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/personal_tv3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/tice"
            android:gravity="center"
            android:text="题测"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/personal_light"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/wode"
            android:gravity="center"
            android:text="我的"
            android:textSize="12dp" />
    </LinearLayout>
</RelativeLayout>