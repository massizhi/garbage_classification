<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TestActivity">

    <LinearLayout
        android:id="@+id/test_ll1"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_alignParentTop="true"
        android:layout_margin="25dp"
        android:background="@drawable/rectangle_one"
        android:orientation="vertical"
        android:paddingLeft="30dp"
        android:paddingTop="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="题目小测试"
            android:textColor="@color/black"
            android:textSize="18dp" />

        <TextView
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="题目为随机生成，无限续刷。"
            android:textColor="#11D183"
            android:textSize="15dp" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="快速做题，轻松知道自己是青铜还是王者。"
            android:textColor="#11D183"
            android:textSize="14dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="快来挑战吧。"
            android:textColor="#11D183"
            android:textSize="15dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="答题数："
                android:textSize="13dp" />

            <TextView
                android:id="@+id/test_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="XX"
                android:textSize="13dp" />

            <TextView
                android:layout_marginLeft="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="正确率："
                android:textSize="13dp" />

            <TextView
                android:id="@+id/test_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="XX"
                android:textSize="13dp" />

            <TextView
                android:layout_marginLeft="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="评级："
                android:textSize="13dp" />

            <TextView
                android:id="@+id/test_rank"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="青铜"
                android:textSize="13dp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/test_show"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_below="@+id/test_ll1"
        android:layout_margin="25dp"
        android:background="@drawable/rectangle"
        android:orientation="vertical"
        android:paddingLeft="30dp"
        android:paddingTop="15dp"
        android:paddingRight="30dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="问题："
                android:textColor="@color/black"
                android:textSize="16dp" />
            <TextView
                android:id="@+id/test_cur"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="X"
                android:textColor="@color/black"
                android:textSize="16dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" / "
                android:textColor="@color/black"
                android:textSize="16dp" />
            <TextView
                android:id="@+id/test_sum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="X"
                android:textColor="@color/black"
                android:textSize="16dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/test_question"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="玻璃杯属于哪种垃圾？请选择对应的选项。"
            android:textColor="#11D183"
            android:textSize="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="选项"
            android:textColor="@color/black"
            android:textSize="16dp" />

        <RadioGroup
            android:id="@+id/rg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/rb1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="       可回收物"
                android:textColor="#11D183"
                android:textSize="16dp" />

            <RadioButton
                android:id="@+id/rb2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="       厨余垃圾（湿垃圾）"
                android:textColor="#11D183"
                android:textSize="16dp" />

            <RadioButton
                android:id="@+id/rb3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="       有害垃圾"
                android:textColor="#11D183"
                android:textSize="16dp" />

            <RadioButton
                android:id="@+id/rb4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="       其他垃圾（干垃圾）"
                android:textColor="#11D183"
                android:textSize="16dp" />

        </RadioGroup>

        <TextView
            android:id="@+id/test_answer1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="答案"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/test_answer2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="正确，玻璃瓶属于可回收物。"
            android:textColor="#11D183"
            android:textSize="16dp"
            android:visibility="invisible" />

        <Button
            android:id="@+id/test_bt"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:background="@drawable/rectangle"
            android:text="继续"
            android:visibility="invisible" />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_above="@id/test_ll"
        android:background="#CCCCCC" />

    <LinearLayout
        android:id="@+id/test_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/test_tv1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:layout_weight="1"
            android:drawableTop="@drawable/shouye"
            android:drawablePadding="2dp"
            android:gravity="center"
            android:text="首页"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/test_tv2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/zhinann"
            android:gravity="center"
            android:text="指南"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/test_light"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/tice"
            android:gravity="center"
            android:text="题测"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/test_tv3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/wode"
            android:gravity="center"
            android:text="我的"
            android:textSize="12dp" />
    </LinearLayout>
</RelativeLayout>